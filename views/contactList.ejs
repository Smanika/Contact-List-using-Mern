<html lang="en">
    <head>

        <link rel="stylesheet" href="/css/home.css">
    
        <!-- Font Awesome Css  -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
</head>
    <body>
        <h1 class="h2">
       
            <i class="fas fa-address-book"></i>&nbsp;Contact List
      
        </h1>
        <form action="/addMore" method="POST">
        <div><button type="submit">Add Contacts</button>
            <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name">
        </div>
        </form>
        <% if(contact_List.length==0){ %>
            <h2>Contact List Empty :(</h2>
            <h2>Add More!!</h2>
        <% } %>
        <div class="list-container">
            <ul id="myUL">   <!--Scroll to see all contacts-->
                <% for(let i of contact_List){ %>
                    <li>
                        <div>
                            <a href="/delete-contact/?id=<%= i._id %>">
                                <i class="far fa-times-circle"></i>
                            </a>
                            <%= i.name %>
                        </div>
                        <div><%= i.email %></div>
                        <div><%= i.phone%></div>
                        <form action="/update-contact/?id=<%= i._id %>" method="post">
                            <input type="text" name="name" placeholder="Name" required> 
                            <input type="email" name="email" placeholder="Email Id" required>
                            <input type="number" name="phone" placeholder="Phone No." required>
                            <button class="styled">UPDATE</button>
                        </form>
                    </li>
                   
                <% } %>
            </ul>
        </div>
        
    </body>
    <script>
        function myFunction() {
            var input, filter, ul, li, a, i, txtValue;
            input = document.getElementById("myInput");
            filter = input.value.toUpperCase();
            ul = document.getElementById("myUL");
            li = ul.getElementsByTagName("li");
            for (i = 0; i < li.length; i++) {
                a = li[i].getElementsByTagName("div")[0];
                txtValue = a.textContent || a.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    li[i].style.display = "";
                } else {
                    li[i].style.display = "none";
                }
            }
        }
        </script>
    
    </html>